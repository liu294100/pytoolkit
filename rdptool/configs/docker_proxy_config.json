{
  "proxy": {
    "host": "0.0.0.0",
    "port": 1080,
    "protocol": "socks5",
    "authentication": {
      "enable": true,
      "username": "proxy_user",
      "password": "proxy_password"
    },
    "upstream_servers": [
      {
        "name": "rdp_server",
        "host": "rdp-server",
        "port": 8888,
        "protocol": "tcp",
        "weight": 100,
        "health_check": {
          "enable": true,
          "interval": 30,
          "timeout": 10,
          "retries": 3
        }
      }
    ],
    "load_balancing": {
      "method": "round_robin",
      "sticky_sessions": true,
      "session_timeout": 3600
    },
    "traffic_control": {
      "rate_limiting": {
        "enable": true,
        "requests_per_second": 100,
        "burst_size": 200
      },
      "bandwidth_limiting": {
        "enable": false,
        "upload_kbps": 10000,
        "download_kbps": 50000
      }
    },
    "security": {
      "ip_whitelist": [],
      "ip_blacklist": [],
      "geo_blocking": {
        "enable": false,
        "allowed_countries": ["CN", "US", "EU"]
      },
      "ddos_protection": {
        "enable": true,
        "max_connections_per_ip": 10,
        "connection_timeout": 60
      }
    },
    "logging": {
      "level": "INFO",
      "file": "/var/log/rdptool/proxy.log",
      "max_size": "100MB",
      "backup_count": 5,
      "access_log": {
        "enable": true,
        "file": "/var/log/rdptool/proxy_access.log",
        "format": "combined"
      }
    },
    "performance": {
      "worker_processes": 4,
      "worker_connections": 1024,
      "buffer_size": 8192,
      "keepalive_timeout": 65,
      "compression": {
        "enable": true,
        "level": 6,
        "min_length": 1024
      }
    },
    "monitoring": {
      "metrics": {
        "enable": true,
        "endpoint": "/metrics",
        "port": 9090
      },
      "health_check": {
        "endpoint": "/health",
        "port": 1080
      }
    },
    "docker": {
      "container_mode": true,
      "network_mode": "bridge"
    }
  }
}