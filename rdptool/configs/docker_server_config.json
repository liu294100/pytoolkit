{
  "server": {
    "host": "0.0.0.0",
    "port": 8888,
    "max_connections": 100,
    "connection_timeout": 300,
    "heartbeat_interval": 30,
    "session_management": {
      "enable": true,
      "session_timeout": 3600,
      "max_sessions_per_user": 5,
      "redis_url": "redis://redis:6379/0"
    },
    "security": {
      "enable_ssl": false,
      "ssl_cert_path": "/app/certs/server.crt",
      "ssl_key_path": "/app/certs/server.key",
      "authentication": {
        "enable": true,
        "method": "token",
        "token_expiry": 86400
      }
    },
    "logging": {
      "level": "INFO",
      "file": "/var/log/rdptool/server.log",
      "max_size": "100MB",
      "backup_count": 5
    },
    "performance": {
      "worker_threads": 10,
      "buffer_size": 8192,
      "compression": {
        "enable": true,
        "level": 6
      }
    },
    "api": {
      "enable": true,
      "host": "0.0.0.0",
      "port": 8888,
      "endpoints": {
        "status": "/api/status",
        "clients": "/api/clients",
        "sessions": "/api/sessions",
        "metrics": "/api/metrics"
      }
    },
    "nat_traversal": {
      "enable": true,
      "target_registration": true,
      "keep_alive_interval": 30,
      "stun_servers": [
        "stun:stun.l.google.com:19302",
        "stun:stun1.l.google.com:19302"
      ]
    }
  }
}