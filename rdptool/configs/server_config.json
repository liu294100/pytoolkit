{
  "server": {
    "host": "0.0.0.0",
    "port": 8888,
    "protocol": "tcp",
    "max_clients": 10,
    "timeout": 30,
    "keepalive": true,
    "keepalive_interval": 10,
    "buffer_size": 65536,
    "backlog": 128
  },
  "screen": {
    "method": "pil",
    "format": "jpeg",
    "quality": 80,
    "fps": 30,
    "scale_factor": 1.0,
    "monitor": 0,
    "region": null,
    "cursor": true,
    "optimization": {
      "enable_delta": true,
      "enable_compression": true,
      "adaptive_quality": true,
      "min_quality": 30,
      "max_quality": 95
    }
  },
  "input": {
    "enable_mouse": true,
    "enable_keyboard": true,
    "enable_scroll": true,
    "mouse_sensitivity": 1.0,
    "keyboard_layout": "auto",
    "security": {
      "restrict_system_keys": true,
      "block_dangerous_keys": true,
      "allowed_keys": [],
      "blocked_keys": ["ctrl+alt+del", "win+l"]
    }
  },
  "security": {
    "encryption_type": "aes_256_cbc",
    "auth_method": "password",
    "require_encryption": true,
    "session_timeout": 3600,
    "max_login_attempts": 3,
    "lockout_duration": 300,
    "allowed_ips": [],
    "blocked_ips": [],
    "certificate": {
      "cert_file": null,
      "key_file": null,
      "ca_file": null,
      "verify_client": false
    },
    "users": {
      "admin": {
        "password_hash": "$2b$12$example_hash",
        "permissions": ["screen_view", "remote_control", "file_transfer"],
        "session_limit": 1
      }
    }
  },
  "network": {
    "compression": {
      "algorithm": "zlib",
      "level": 6,
      "threshold": 1024
    },
    "bandwidth": {
      "limit_mbps": 0,
      "adaptive": true,
      "priority": "quality"
    },
    "proxy": {
      "enable": false,
      "type": "http",
      "host": "127.0.0.1",
      "port": 8080,
      "username": null,
      "password": null
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/server.log",
    "max_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "console": true,
    "colored": true
  },
  "performance": {
    "enable_monitoring": true,
    "stats_interval": 60,
    "memory_limit": "1GB",
    "cpu_limit": 80,
    "thread_pool_size": 4,
    "async_workers": 2
  },
  "features": {
    "file_transfer": {
      "enable": true,
      "max_file_size": "100MB",
      "allowed_extensions": [".txt", ".pdf", ".doc", ".docx", ".xls", ".xlsx"],
      "upload_dir": "uploads/",
      "download_dir": "downloads/"
    },
    "clipboard": {
      "enable": true,
      "sync_interval": 1,
      "max_size": "1MB"
    },
    "audio": {
      "enable": false,
      "quality": "medium",
      "sample_rate": 44100,
      "channels": 2
    },
    "recording": {
      "enable": false,
      "format": "mp4",
      "quality": "high",
      "save_dir": "recordings/"
    }
  },
  "advanced": {
    "debug_mode": false,
    "profile_performance": false,
    "enable_plugins": true,
    "plugin_dir": "plugins/",
    "custom_protocols": [],
    "experimental_features": {
      "gpu_acceleration": false,
      "hardware_encoding": false,
      "multi_threading": true
    }
  }
}